<div class="namecard-area">
    <div class="profile-contents">
        <div class="profile-content-left">
            <%= image_tag @home.image.url %>
        </div>
        <div class="profile-content-right">
            <h2><%= @home.name %></h2>
            <h3><%= @home.school %></h3>
            <h4><%= @home.department %></h4>
            <hr>
            <p>tel   : <%= @home.phone %></p>
            <p>email : <%= @home.address %></p>
            
        </div>
    </div>
</div>

