<div class="card_contents">

    <div class="information_area">
        <h1>名刺に必要な情報を入力してください。</h1>
        <div class="box_cardarea">
            <%= form_with model: @home ,url: home_index_path,  method: :post do |f| %>
                <p>
                    <%= f.label :name, "氏名" %><br>
                    <%= f.text_field :name %>
                </p>
                <p>
                    <%= f.label :school, "学校名" %><br>
                    <%= f.text_field :school %>
                </p>
                <p>
                    <%= f.label :department, "学科" %><br>
                    <%= f.text_field :department %>
                </p>
                <p>
                    <%= f.label :address, "メールアドレス" %><br>
                    <%= f.email_field :address %>
                </p>
                <p>
                    <%= f.label :phone, "電話番号" %><br>
                    <%= f.phone_field :phone %>
                </p>
                <p>
                    <%= f.label :image, "本人写真" %><br>
                    <%= f.file_field :image %>
                </p>
                <p>
                    <%= f.label :favorite_a, "趣味" %><br>
                    <%= f.text_field :favorite_a %>
                    <%= f.text_field :favorite_b %>
                    <%= f.text_field :favorite_c %>
                    <%= f.text_field :favorite_d %>
                </p>
                <p>
                    <%= f.label :title, "タイトル" %><br>
                    <%= f.text_field :title %>
                </p>
                <p>
                    <%= f.label :caption, "見出し" %><br>
                    <%= f.text_field :caption %>
                </p>
                <div class="form-group">
                    <%= f.label "カテゴリ" %>
                    <%= f.select :user_id, User.all.map { |user| [user.name, user.id] }, {}, class: "form-control" %>
                </div>

                <%= f.submit "登録する" %>
            <% end %>
        </div>
        <div class="card-image">
            <img src="/namecard_image.jpg" alt="イメージ画像">
        </div>
    </div>

</div>
