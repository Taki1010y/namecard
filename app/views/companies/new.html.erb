<div class="container">
    <h1>会社を登録</h1>

    <%= form_with model: @company do |f| %>
        <div class="form-group">
            <%= f.label "会社名" %>
            <%= f.text_field :company_name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "担当者" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "カテゴリ" %>
            <%= f.select :category_id, Category.all.map { |category| [category.genre_name, category.id] }, {}, class: "form-control" %>
        </div>

        <%= f.submit "会社を登録", class:"btn btn-success" %>
    <% end %>

    <%= link_to "会社一覧に戻る", companies_path %>
</div>
