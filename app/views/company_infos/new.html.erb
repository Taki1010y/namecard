<div class="container">
    <h1>会社を登録しましょう</h1>

    <%= form_with model: @company_info do |f| %>
        <div class="form-group">
            <%= f.label "会社名" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "担当者名" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "住所" %>
            <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "アクセス" %>
            <%= f.text_field :access, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "ホームページ" %>
            <%= f.text_field :url, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label "カテゴリ" %>
            <%= f.select :category_id, Category.all.map { |category| [category.genre_name, category.id] }, {}, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :image, "会社写真" %><br>
            <%= f.file_field :image %>
        </div>

        <%= f.submit "会社を登録", class:"btn btn-success" %>
    <% end %>

    <%= link_to "会社一覧に戻る", company_infos_path %>
</div>
