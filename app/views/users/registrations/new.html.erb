<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">新規会員登録</h3>

        <hr>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">

          <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
            氏名
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if resource.errors.messages[:name].present? } sach-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "山田 太郎"
            %>

            <% if resource.errors.messages[:name].present? %>
              <span class="sach-error-message">
                <strong><%= resource.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <% #ここまで名前 %>

          <div class="form-group row">
  
            <%= f.label :school, "", class: "col-md-5 col-form-label text-md-left" do %>
              学校名
              <span class="ml-1 sach-require-input-label">
                <span class="sach-require-input-label-text">必須</span>
              </span>
            <% end %>
  
            <div class="col-md-7">
              <%=
                f.text_field :school,
                class: "form-control #{"is-invalid" if resource.errors.messages[:school].present? } sach-login-input",
                autofocus: "true",
                required: "",
                autocomplete: "school",
                placeholder: "学校名"
              %>
  
              <% if resource.errors.messages[:school].present? %>
                <span class="sach-error-message">
                  <strong><%= resource.errors.full_messages_for(:school).first %></strong>
                </span>
              <% end %>
            </div>
          </div>
  
          <% #ここまで学校名 %>

          <div class="form-group row">
  
            <%= f.label :age, "", class: "col-md-5 col-form-label text-md-left" do %>
              年齢
              <span class="ml-1 sach-require-input-label">
                <span class="sach-require-input-label-text">必須</span>
              </span>
            <% end %>
  
            <div class="col-md-7">
              <%=
                f.text_field :age,
                class: "form-control #{"is-invalid" if resource.errors.messages[:age].present? } sach-login-input",
                autofocus: "true",
                required: "",
                autocomplete: "age",
                placeholder: "年齢"
              %>
  
              <% if resource.errors.messages[:age].present? %>
                <span class="sach-error-message">
                  <strong><%= resource.errors.full_messages_for(:age).first %></strong>
                </span>
              <% end %>
            </div>
          </div>
  
          <% #ここまで年齢 %>

        <div class="form-group row">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if resource.errors.messages[:email].present? } sach-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if resource.errors.messages[:email].present? %>
              <span class="sach-error-message">
                <strong><%= resource.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <% #ここまでメール %>

        <div class="form-group row">
          <%= f.label :postal_code, "", class: "col-md-5 col-form-label text-md-left" do %>
          郵便番号
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :postal_code,
              class: "form-control #{"is-invalid" if resource.errors.messages[:postal_code].present? } sach-login-input",
              required: "",
              placeholder: "150-0043"
            %>
          </div>
        </div>

        <% #ここまで郵便番号 %>

        <div class="form-group row">
          <%= f.label :address, "", class: "col-md-5 col-form-label text-md-left" do %>
          住所
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :address,
              class: "form-control #{"is-invalid" if resource.errors.messages[:address].present? } sach-login-input",
              required: "",
              placeholder: "東京都渋谷区道玄坂２丁目１１−１"
            %>
          </div>
        </div>

        <% #ここまで住所 %>

        <div class="form-group row">
          <%= f.label :phone, "", class: "col-md-5 col-form-label text-md-left" do %>
          電話番号
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :phone,
              class: "form-control #{"is-invalid" if resource.errors.messages[:phone].present? } sach-login-input",
              required: "",
              placeholder: "03-5790-9039"
            %>
          </div>
        </div>

        <% #ここまで電話番号 %>

        <div class="form-group row">
          <%= f.label :password, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1 sach-require-input-label">
              <span class="sach-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? } sach-login-input",
              autofocus: "true"
            %>
            <% if resource.errors.messages[:password].present? %>
            <span class="sach-error-message">
              <strong><%= resource.errors.full_messages_for(:password).first %></strong>
            </span>
            <% end %>
            </div>
          </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "", class: "col-md-5 col-form-label text-md-left" do %>
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control sach-login-input",
              autocomplete: "new-password"
            %>
          </div>
        </div>

        <% #ここまでメール %>

        <div class="form-group">
          <button type="submit" class="btn sach-submit-button w-100">
            アカウント作成
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>